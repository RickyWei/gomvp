input TodoInput {
  userId: String!
  name: String!
  ddl: Int
  done: Boolean
  doneAt: Int
}

type Todo {
  id: ID
  createdAt: Int
  updatedAt: Int
  deletedAt: Int

  userId: String!
  name: String!
  ddl: Int
  done: Boolean
  doneAt: Int
}

extend type Query {
  todos: [Todo!]!
}

extend type Mutation {
  createTodo(input: TodoInput!): Todo!
  deleteTodo(input: String!): String!
  updateTodo(input: TodoInput!): Todo!
}
